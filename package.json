{
  "name": "hc3fs",
  "displayName": "hc3fs",
  "description": "HC3 fs",
  "version": "0.0.2",
  "publisher": "jan@gabrielsson.com",
  "license": "MIT",
  "author": {
    "name": "Jan Gabrielsson",
    "email": "jan@gabrielsson.com"
  },
  "bugs": {
    "url": "https://github.com/jangabrielsson/hc3fs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jangabrielsson/hc3fs/tree/master"},
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:hc3fs"
  ],
  "main": "./out/extension.js",
  "contributes": {
		"commands": [
			{
				"command": "hc3fs.workspaceInit",
				"title": "Setup Workspace",
				"category": "hc3fs"
			},
			{
				"command": "hc3fs.resync",
				"title": "Sync changes from HC3",
				"category": "hc3fs"
			},
			{
				"command": "hc3fs.toggleLog",
				"title": "Toggle HC3 logs",
				"category": "hc3fs"
			},
			{
				"command": "hc3fs.downloadFQA",
				"title": "Download .fqa",
				"category": "hc3fs"
			},
			{
				"command": "hc3fs.downloadScene",
				"title": "Download Scene",
				"category": "hc3fs"
			},
			{
				"command": "hc3fs.logFilter",
				"title": "Filter HC3 log on tags",
				"category": "hc3fs"
			},
      {
				"command": "hc3fs.toggleReadOnly",
				"title": "Toggle read only for file",
				"category": "hc3fs"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "hc3fs.resync",
					"when": "workbenchState == workspace"
				},
				{
					"command": "hc3fs.workspaceInit",
					"when": "workbenchState != workspace"
				},
        {
					"command": "hc3fs.logFilter",
					"when": "workbenchState == workspace"
				}
			],
      "explorer/context": [
        {
          "command": "hc3fs.downloadFQA",
          "when": "resourceScheme == hc3fs && resourcePath =~ /\\/QuickApps\\/\\d+ \\w+$/"
        },
        {
          "command": "hc3fs.downloadScene",
          "when": "resourceScheme == hc3fs && resourcePath =~ /\\/Scenes\\/\\d+ \\w+$/"
        },
        {
          "command": "hc3fs.toggleReadOnly",
          "when": "resourceScheme == hc3fs && resourcePath =~ /\\/QuickApps.+\\.lua$/"
        },
        {
          "command": "hc3fs.resync",
          "when": "resourceScheme == hc3fs && (resourcePath == '/Scenes' || resourcePath == '/QuickApps')"
        }
      ]
		},
		"configuration": {
      "title": "HC3FS",
      "properties": {
        "hc3fs.user": {
          "type": "string",
          "default": "admin",
          "description": "User name on HC3."
        },
        "hc3fs.password": {
          "type": "string",
          "default": "admin",
          "description": "Password for user on HC3."
        },
        "hc3fs.url": {
          "type": "string",
          "default": "http://<ip>",
          "description": "URL to HC3."
        },
        "hc3fs.hc3log": {
          "type": "boolean",
          "default": true,
          "description": "Fetch logs from HC3."
        },
        "hc3fs.debug": {
          "type": "boolean",
          "default": true,
          "description": "Log file operations."
        }
      }
    }
	},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  },
  "dependencies": {
  }
}
